<h1>Update Owner</h1>

<form action="/owners/<%=@owner.id%>" method="POST">
  <label>Name:</label>
  <input type="text" name="owner[name]" id="owner_id" value="<%=@owner.name%>">
  <label>Choose an existing pet:</label>
  <%@pets.each do |pet|%>
    <input type="checkbox" name="owner[pet_ids][]" value="<%=pet.id%>" id="<%=pet.name%>" <%='checked' if @owner.pets.include?(pet) %>><%=pet.name%><
  <%end%> 
  <br>
  <label>and/or, create a new pet:</label>
  <br>
  <label>name:</label>
    <input  type="text" name="pet[name]" id="pet_id">
  <br>
  <input type="submit" value="Update Owner">
</form>